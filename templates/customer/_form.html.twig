{{ form_start(form) }}
<div class="row">
    {% if app.user.isSuperadmin %}
        <div class="col-md-12">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'fields.superadmin_details'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            {% if form.company is defined %}
                                {{ form_row(form.company) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">{{ 'customer.contact_details'|trans }}</h2>
            </div>
            <div class="panel-body">
                {{ form_errors(form, { global_errors: true }) }}

                {{ form_row(form.name) }}
                {{ form_row(form.email) }}
                {{ form_row(form.vatNumber) }}
                {{ form_row(form.fiscalCode) }}
                {{ form_row(form.referent) }}
                {{ form_row(form.notes) }}
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h2 class="panel-title">{{ 'customer.address_details'|trans }}</h2>
            </div>
            <div class="panel-body">
                {{ form_row(form.phoneNumber) }}
                {{ form_row(form.faxNumber) }}
                {{ form_row(form.address) }}

                <div class="js-address">
                    <div class="row">
                        <div class="col-md-8">
                            {{ form_row(form.city) }}
                        </div>
                        <div class="col-md-4">
                            {{ form_row(form.province) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            {{ form_row(form.zipCode) }}
                        </div>
                        <div class="col-md-6">
                            {{ form_row(form.country) }}
                        </div>
                    </div>
                </div>
                {{ form_row(form.addressNotes) }}
            </div>
        </div>
    </div>
</div>

{{ form_row(form.attachments) }}

<div class="form-actions">
    {{ form_widget(form.save) }}
    {{ form_widget(form.saveAndClose) }}

</div>

{{ form_end(form) }}
