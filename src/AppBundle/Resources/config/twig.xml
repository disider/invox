<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="twig.format_extension.class">AppBundle\Twig\FormatExtension</parameter>
        <parameter key="twig.global_extension.class">AppBundle\Twig\GlobalExtension</parameter>
        <parameter key="twig.icon_extension.class">AppBundle\Twig\IconExtension</parameter>
        <parameter key="twig.routing_extension.class">AppBundle\Twig\RoutingExtension</parameter>
    </parameters>

    <services>
        <service id="twig.extension.text" class="Twig_Extensions_Extension_Text">
            <tag name="twig.extension"/>
        </service>

        <service id="twig.format_extension" class="%twig.format_extension.class%">
            <argument type="service" id="twig" />
            <argument type="service" id="locale_formatter" />
            <tag name="twig.extension"/>
        </service>

        <service id="twig.global_extension" class="%twig.global_extension.class%">
            <argument>true</argument>
            <tag name="twig.extension"/>
        </service>

        <service id="twig.icon_extension" class="%twig.icon_extension.class%">
            <tag name="twig.extension"/>
        </service>

        <service id="routing.format_extension" class="%twig.routing_extension.class%">
            <argument type="service" id="router" />
            <argument type="service" id="security.authorization_checker" />
            <argument type="service" id="translator.default" />
            <tag name="twig.extension"/>
        </service>

    </services>
</container>
