<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="AppBundle\Entity\Invite" table="invite" repository-class="AppBundle\Entity\Repository\EntityRepository">
        <id name="id" type="integer" column="id">
            <generator strategy="AUTO"/>
        </id>

        <field name="email" column="email" type="string" length="255" nullable="false"/>
        <field name="token" column="token" type="string" length="255" nullable="false"/>

        <many-to-one field="company" target-entity="Company" inversed-by="invites">
            <join-column name="company_id" referenced-column-name="id" on-delete="CASCADE" nullable="false" />
        </many-to-one>

        <many-to-one field="sender" target-entity="User" inversed-by="sentInvites">
            <join-column name="sender_id" referenced-column-name="id" on-delete="CASCADE" nullable="false" />
        </many-to-one>

        <many-to-one field="receiver" target-entity="User" inversed-by="receivedInvites">
            <join-column name="receiver_id" referenced-column-name="id" on-delete="SET NULL" nullable="true" />
        </many-to-one>

    </entity>

</doctrine-mapping>
