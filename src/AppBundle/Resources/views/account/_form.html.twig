{{ form_start(form) }}
<div class="row">
    {% if app.user.isSuperadmin %}
        <div class="col-md-12">
            <div class="panel panel-warning">
                <div class="panel-heading">
                    <h2 class="panel-title">{{ 'fields.superadmin_details'|trans }}</h2>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-md-4">
                            {% if form.company is defined %}
                                {{ form_row(form.company) }}
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}

    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-body ">
                {{ form_errors(form, { global_errors: true }) }}


                <div class="row">
                    <div class="col-md-3">
                        {{ form_row(form.type) }}
                    </div>
                    <div class="col-md-3">
                        {{ form_row(form.name) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_row(form.iban) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        {{ form_row(form.initialAmount) }}
                    </div>
                    {% if form.currentAmount is defined %}
                        <div class="col-md-3">
                            {{ form_row(form.currentAmount) }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>

<div class="form-actions">
    {{ form_widget(form.save) }}
    {{ form_widget(form.saveAndClose) }}
</div>

{{ form_end(form) }}
