{% extends '::one-column.html.twig' %}

{% block main_content %}
    <pre>Subject: {{ subject }}</pre>
    <pre>{{ txt }}</pre>

    <div class="panel panel-default">
        <div class="panel-body">
            <iframe id="html" src="about:blank" style="width: 100%; height: 400px; border: none">
                {{ html }}
            </iframe>
        </div>
    </div>

    <script id="template" type="text/template">
        {{ html|raw }}
    </script>

    <script>
        var $html = $('#html');
        var $template = $('#template');

        var doc = $html[0].contentWindow.document;
        doc.open();
        doc.write($template.text());
        doc.close();
    </script>
{% endblock %}

