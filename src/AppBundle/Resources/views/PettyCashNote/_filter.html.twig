{{ form_start(form, {method: 'GET'}) }}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-3">
                {{ form_row(form.type) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.ref) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.customer) }}
            </div>
            <div class="col-md-3">
                {{ form_row(form.account) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.recordedAt) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.description) }}
            </div>
        </div>

        <div class="form-actions">
            {{ form_widget(form.filter) }}

            <a class="btn btn-default btn-sm" href="{{ path('petty_cash_notes') }}">{{ 'actions.reset'|trans }}</a>
        </div>
    </div>
</div>

{{ form_end(form) }}

