{{ form_start(form, {method: 'GET'}) }}
<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                {{ form_row(form.direction) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.content) }}
            </div>
            <div class="col-md-4">
                {{ form_row(form.customer) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.startAt) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.nextDueDate) }}
            </div>
        </div>

        <div class="form-actions">
            {{ form_widget(form.filter) }}

            <a class="btn btn-default btn-sm" href="{{ path('recurrences') }}">{{ 'actions.reset'|trans }}</a>
        </div>
    </div>
</div>

{{ form_end(form) }}

