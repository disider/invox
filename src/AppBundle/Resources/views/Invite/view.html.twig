{% extends '::two-columns.html.twig' %}

{% block main_content %}
    <h1>{{ 'invite.show'|trans({'%company%': invite.company}) }}</h1>

    <div class="row">
        <div class="col-md-12">
            <p>{{ 'invite.help'|trans({'%company%': invite.company}) }}</p>

            <a class="btn btn-success"
               href="{{ path('invite_accept', { 'token': invite.token }) }}">{{ 'actions.accept'|trans }}</a>
            <a class="btn btn-danger"
               href="{{ path('invite_accept', { 'token': invite.token }) }}">{{ 'actions.refuse'|trans }}</a>
        </div>
    </div>

{% endblock main_content %}